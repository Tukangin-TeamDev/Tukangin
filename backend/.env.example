# Server
PORT=5000
NODE_ENV=development

# Database - Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/tukangin_db?schema=public"

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@tukangin.com

# SMS - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Geo - Node Geocoder
GEOCODER_PROVIDER=google
GEOCODER_API_KEY=your_geocoder_api_key

# App URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Escrow Service
ESCROW_SECRET_KEY=your_escrow_secret_key 